<div class="ui list">
{% for cadeia in cadeias %}
    <div class="item">
        <i class="folder icon"></i>
        <div class="content">
            {{ cadeia.id }}
            <div class="ui list">
                {% for sentenca in cadeia.content %}
                <div class="item">
                    <i class="file text icon"></i>
                    <div class="content">
                        {{ sentenca.sintagma }}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endfor %}
</div>