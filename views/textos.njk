{% extends "layout.njk" %}

{% block conteudo %}
<div class="ui container">

    <div class="ui top attached tabular menu">
        <a class="active item" data-tab="correlacoes">
            Correlações
        </a>                    
        <a class="item" data-tab="correferencias">
            Correferências
        </a>
    </div>

    <div class="ui bottom attached active tab divided grid segment" data-tab="correlacoes">
        
        <div class="four wide column">
            <h2> Arquivos </h2>
            {% include "./arquivos/pastas_correl.njk" %}
        </div>

        <div class="eleven wide column">
            <h2 class="ui center aligned header">
                <i class="percent icon"></i>
                <div class="content">
                    Concordâncias
                    <div class="sub header">Inclui o cálculo do Kappa das concordâncias</div>
                </div>
            </h2>
        </div>

    </div>

    <div class="ui bottom attached tab divided grid segment" data-tab="correferencias">
        
