            <h2> Arquivos </h2>
            {% include "./arquivos/pastas_corref.njk" %}
        </div>

        <div class="eleven wide column">
            <div class="centered row">
                <h2 class="ui center aligned header">
                    <i class="percent icon"></i>
                    <div class="content">
                        Concordâncias
                        <div class="sub header">Inclui o cálculo do Kappa das concordâncias</div>
                    </div>
                </h2>
            </div>

            <div class="row">
                <div class="ui secondary pointing menu concordancias">
                    <a class="active item" data-tab="concordancia1">
                        Concordância 1
                    </a>
                    <a class="item" data-tab="concordancia2">
                        Concordância 2
                    </a>
                </div>
            </div>

            <div class="row">
                <div "id=concordancia1" class="ui active tab" data-tab="concordancia1"></div>
                <div "id=concordancia2" class="ui tab" data-tab="concordancia2"></div>
            </div>
            


            
        </div>

    </div>

</div>

